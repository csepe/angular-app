.table-container
    table(mat-table #table [dataSource]="dataSource" matSort)
        ng-container(*ngFor="let col of displayedColumns; let index = index;", [matColumnDef]="col")
            th(mat-header-cell *matHeaderCellDef mat-sort-header) {{ columns[index] | titlecase }}
            td(mat-cell *matCellDef="let element")
                ng-container(*ngIf="!utils.checkUrlIsImage(element[col])") {{element[col]}}
                img(*ngIf="utils.checkUrlIsImage(element[col])", [src]="element[col]")
        tr(mat-header-row *matHeaderRowDef="displayedColumns")
        tr(mat-row *matRowDef="let row; columns: displayedColumns;")